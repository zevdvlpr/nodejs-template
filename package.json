{
  "name": "node-setup-typescript-structure-template",
  "description": "Minhas configurações padronizadas usadas nos meus projetos com TS.",
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpileOnly --ignore-watch node_modules --no-notify src/index.ts",
    "prod": "run-s clean compile run",
    "test": "jest",
    "clean": "rimraf dist",
    "compile": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "run": "node dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zevdvlpr/node-setup-typescript-structure-template.git"
  },
  "keywords": ["nodejs", "typescript", "eslint", "jest", "babel"],
  "author": {
    "name": "Zev",
    "url": "https://github.com/zevdvlpr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zevdvlpr/node-setup-typescript-structure-template/issues"
  },
  "homepage": "https://github.com/zevdvlpr/node-setup-typescript-structure-template#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  }
}

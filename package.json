{
  "name": "nodejs-template",
  "description": "Minhas Configurações que uso nos meus projetos de back-end usando Node.js",
  "version": "1.0.0",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsnd -r tsconfig-paths/register --respawn --transpileOnly --ignore-watch node_modules --no-notify src/app.ts",
    "prod": "run-s clean compile run",
    "test": "jest",
    "clean": "rimraf dist",
    "compile": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "run": "node dist",
    "lint": "eslint ./ --ext js,ts",
    "lint:fix": "eslint ./ --ext js,ts --fix",
    "prettier": "prettier --check ./**/*.{js,ts}",
    "prettier:fix": "prettier --write ./**/*.{js,ts}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zevdvlpr/nodejs-template.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "jest",
    "babel",
    "eslint",
    "prettier"
  ],
  "author": {
    "name": "Zev",
    "url": "https://github.com/zevdvlpr"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zevdvlpr/nodejs-template/issues"
  },
  "homepage": "https://github.com/zevdvlpr/nodejs-template#readme",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "2.21.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  }
}
